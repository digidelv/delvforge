{
  "name": "@delvforge/core",
  "version": "1.0.0",
  "description": "Universal CSS utility framework core - framework agnostic",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./css": "./dist/delvforge.css",
    "./css/modern": "./dist/delvforge-modern.css",
    "./css/prefixed": "./dist/delvforge-prefixed.css"
  },
  "files": [
    "dist/",
    "src/",
    "README.md"
  ],
  "scripts": {
    "build": "rollup -c && npm run build:css",
    "build:css": "node scripts/build-css.js",
    "dev": "rollup -c -w",
    "types": "tsc --declaration --emitDeclarationOnly --outDir dist"
  },
  "keywords": [
    "css",
    "utility",
    "framework",
    "universal",
    "react",
    "vue",
    "angular",
    "vanilla"
  ],
  "author": "Your Company",
  "license": "MIT",
  "dependencies": {
    "postcss": "^8.4.31",
    "chroma-js": "^2.4.2"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.5",
    "rollup": "^4.5.0",
    "typescript": "^5.2.2"
  },
  "publishConfig": {
    "access": "public"
  }
}