{
  "name": "@delvforge/vue",
  "version": "1.0.0",
  "description": "DelvForge CSS utility framework for Vue.js",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./css": "@delvforge/core/css"
  },
  "files": [
    "dist/",
    "src/",
    "README.md"
  ],
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "types": "tsc --declaration --emitDeclarationOnly --outDir dist"
  },
  "keywords": [
    "vue",
    "vue3",
    "css",
    "utility",
    "framework",
    "delvforge"
  ],
  "author": "Your Company",
  "license": "MIT",
  "dependencies": {
    "@delvforge/core": "workspace:*"
  },
  "peerDependencies": {
    "vue": ">=3.0.0"
  },
  "devDependencies": {
    "vue": "^3.3.0"
  }
}