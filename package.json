{
  "name": "@delvforge/css",
  "version": "1.0.0",
  "description": "DelvForge - Universal CSS utility framework similar to TailwindCSS with enhanced capabilities",
  "private": false,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build:core && npm run build:packages",
    "build:core": "npm run build -w packages/core",
    "build:packages": "npm run build -w packages/react && npm run build -w packages/vue && npm run build -w packages/angular && npm run build -w packages/react-native && npm run build -w packages/vanilla",
    "dev": "npm run dev:core",
    "dev:core": "npm run dev -w packages/core",
    "test": "npm run test -w packages/core",
    "lint": "npm run lint -w packages/core",
    "clean": "rimraf packages/*/dist packages/*/node_modules",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "npm run build && changeset publish"
  },
  "keywords": [
    "css",
    "utility",
    "framework",
    "react",
    "vue",
    "angular",
    "react-native",
    "vanilla",
    "universal",
    "postcss",
    "responsive"
  ],
  "author": "Aman Soni <aman.soni.se@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@changesets/cli": "^2.26.2",
    "@types/node": "^20.8.0",
    "rimraf": "^5.0.5",
    "typescript": "^5.2.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/digidelv/delvforge.git"
  },
  "bugs": {
    "url": "https://github.com/digidelv/delvforge/issues"
  },
  "homepage": "https://github.com/digidelv/delvforge#readme",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "files": [
    "lib/",
    "src/",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  }
}